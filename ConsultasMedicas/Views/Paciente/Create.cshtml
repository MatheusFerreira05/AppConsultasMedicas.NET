@model ConsultasMedicas.Models.Paciente

<h1>Adicionar Novo Paciente</h1>

<form asp-action="Create">
    <div class="form-group">
        <label>Nome:</label>
        <input asp-for="Nome" class="form-control" />
    </div>
    <div class="form-group">
        <label>Data de Nascimento:</label>
        <input asp-for="DataNascimento" type="date" class="form-control" />
    </div>
    <div class="form-group">
        <label>Gênero:</label>
        <select asp-for="Genero" class="form-control">
            <option value="Masculino">Masculino</option>
            <option value="Feminino">Feminino</option>
            <option value="Outro">Outro</option>
        </select>
    </div>
    <div class="form-group">
        <label>Histórico Médico:</label>
        <textarea asp-for="HistoricoMedico" class="form-control"></textarea>
    </div>
    <button type="submit" class="btn btn-primary">Salvar</button>
</form>

<a asp-action="Index">Cancelar</a>
